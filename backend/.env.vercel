# Vercel Environment Variables for Component Generator Backend
# Copy these to your Vercel project's environment variables in the dashboard
# or use in .env.local for local development

# MongoDB Connection String (use MongoDB Atlas for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/component-generator?retryWrites=true&w=majority

# Redis Connection (use Redis Cloud or Upstash for production)
REDIS_HOST=your-redis-host.cloud.redislabs.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Server Configuration
PORT=3000
FRONTEND_URL=https://ai-code-generator-vhty.vercel.app

# API Version
API_VERSION=v1

# Allowed Origins for CORS (add your Vercel domains)
ALLOWED_ORIGINS=https://ai-code-generator-vhty.vercel.app

# JWT Secrets (generate strong random keys for production)
JWT_SECRET=your_production_jwt_secret_key_here
JWT_REFRESH_SECRET=your_production_jwt_refresh_secret_key_here

# Node Environment
NODE_ENV=production

# Google Gemini AI API Key
GEMINI_API_KEY=AIzaSyCZJsLLgZW0-8Az_bAu4x88HZYm8GgHuY8
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent

# (Optional) OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# (Optional) OpenRouter API Key
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_BASE_URL=https://openrouter.ai/api/v1

# Default AI Model
AI_MODEL=gemini-pro

# Additional Vercel-specific configurations
VERCEL=1
VERCEL_URL=$VERCEL_URL
VERCEL_REGION=auto
